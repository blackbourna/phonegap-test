<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.phonegap.example"
        versionCode="10" 
        version   = "1.1.5">
	<gap:platform name="android" />
    <name>PhoneGap App</name>
    <description>
        Just another PhoneGap App
    </description>
    <author href="http://www.google.com" email="blackbourna@gmail.com">
        Andrew Blackbourn
    </author>
	<feature name="Device" value="org.apache.cordova.core.Device"/>
	
	<feature name="Battery" value="org.apache.cordova.core.BatteryListener" />
	<feature name="Accelerometer" value="org.apache.cordova.core.AccelListener" />
	<feature name="Notification" value="org.apache.cordova.core.Notification" />
	<feature name="Vibration" value="org.apache.cordova.core.Vibration" />
	
    <preference name="phonegap-version" value="3.0.0" />
    <gap:plugin name="org.apache.cordova.core.vibration" />
	<gap:plugin name="org.apache.cordova.core.device-motion" />
	<gap:plugin name="org.apache.cordova.core.dialogs" />
	<gap:plugin name="org.apache.cordova.core.battery-status" />
	<gap:plugin name="com.phonegap.plugins.barcodescanner" version="1.0.2" />
</widget>
